<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#F09090">

    <TextView
        android:id="@+id/clc"
        android:text="CALCULATE"
        android:textSize="35dp"
        android:layout_marginTop="10pt"
        android:textStyle="bold"
        android:textColor="@color/colorAccent"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <EditText
        android:id="@+id/et_angka"
        android:hint="Angka"
        android:inputType="number"
        android:layout_below="@id/clc"
        android:layout_marginLeft="47pt"
        android:layout_marginTop="15pt"
        android:layout_marginBottom="15pt"
        android:textAlignment="center"
        android:layout_width="200dp"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/sin"
        android:text="SIN"
        android:textStyle="bold"
        android:textColor="@color/colorAccent"
        android:layout_below="@id/et_angka"
        android:layout_marginTop="5pt"
        android:layout_marginLeft="4pt"
        android:layout_width="130dp"
        android:layout_height="80dp"/>

    <Button
        android:id="@+id/cos"
        android:text="COS"
        android:textStyle="bold"
        android:textColor="@color/colorAccent"
        android:layout_below="@id/et_angka"
        android:layout_toRightOf="@id/sin"
        android:layout_marginTop="5pt"
        android:layout_width="130dp"
        android:layout_height="80dp"/>

    <Button
        android:id="@+id/tan"
        android:text="TAN"
        android:textStyle="bold"
        android:textColor="@color/colorAccent"
        android:layout_below="@id/et_angka"
        android:layout_toRightOf="@id/cos"
        android:layout_marginRight="4pt"
        android:layout_marginTop="5pt"
        android:layout_width="130dp"
        android:layout_height="80dp"/>

    <Button
        android:id="@+id/csc"
        android:text="CSC"
        android:textStyle="bold"
        android:textColor="@color/colorAccent"
        android:layout_below="@id/sin"
        android:layout_marginLeft="4pt"
        android:layout_width="130dp"
        android:layout_height="80dp"/>

    <Button
        android:id="@+id/sec"
        android:text="SEC"
        android:textStyle="bold"
        android:textColor="@color/colorAccent"
        android:layout_below="@id/cos"
        android:layout_toRightOf="@id/csc"
        android:layout_width="130dp"
        android:layout_height="80dp"/>

    <Button
        android:id="@+id/cot"
        android:text="COT"
        android:textStyle="bold"
        android:textColor="@color/colorAccent"
        android:layout_below="@id/tan"
        android:layout_toRightOf="@id/sec"
        android:layout_marginRight="4pt"
        android:layout_width="130dp"
        android:layout_height="80dp"/>

    <Button
        android:id="@+id/log"
        android:text="LOGARITMA"
        android:textSize="4mm"
        android:textStyle="bold"
        android:textColor="@color/colorAccent"
        android:layout_below="@id/csc"
        android:layout_marginLeft="4pt"
        android:layout_marginRight="4pt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_hasil"
        android:layout_below="@id/log"
        android:text="0.0"
        android:textAlignment="center"
        android:layout_marginTop="6pt"
        android:textSize="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</RelativeLayout>

